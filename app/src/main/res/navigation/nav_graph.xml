<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="uz.coders.currency.ui.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first"/>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="uz.coders.currency.ui.SettingsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second"/>
    <fragment
        android:id="@+id/introFragment"
        android:name="uz.coders.currency.ui.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_canverterFragment"
            app:destination="@id/canverterFragment" />
    </fragment>
    <fragment
        android:id="@+id/canverterFragment"
        android:name="uz.coders.currency.ui.ConverterFragment"
        android:label="fragment_canverter"
        tools:layout="@layout/fragment_converter" />
</navigation>